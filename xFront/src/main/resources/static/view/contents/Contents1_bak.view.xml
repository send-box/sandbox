<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:t="sap.ui.table" xmlns:l="sap.ui.layout"
	controllerName="OpenUI5.controller.contents.Contents1">

	<l:HorizontalLayout class="sapViewInner">
		<l:content>
			<VBox>
				<!-- Title & Description Area -->
				<l:HorizontalLayout class="titleArea">
					<Text text="{i18n>contents1Title}" class="headCopy" />
					<Text text="{i18n>contents1Description}" class="DescCopy" />
				</l:HorizontalLayout>

				<!-- Overview Content & Table Area -->
				<l:HorizontalLayout class="contentArea">

					<!-- Card List & Chart -->
					<VBox>
						<Text text="지역별 미세먼지" class="subTitle" />
						<HBox class="chartArea" />

						<Text text="Warning List" class="subTitle" />

						<!-- Card First -->
						<l:HorizontalLayout class="cardItemUI">
							<VBox>
								<HBox>
									<Text text="SO2" class="cardItemTitle" />
									<Text text="unit" class="cardItemUnit" />
								</HBox>
								<Text text="이산화황농도" />
								<Text text="Status" class="cardItemStatus" />
							</VBox>
							<Text text="30.1" class="cardItemValue" />
						</l:HorizontalLayout>

						<!-- Card Second -->
						<l:HorizontalLayout class="cardItemUI">
							<VBox>
								<HBox>
									<Text text="SO2" class="cardItemTitle" />
									<Text text="unit" class="cardItemUnit" />
								</HBox>
								<Text text="이산화황농도" />
								<Text text="Status" class="cardItemStatus" />
							</VBox>
							<Text text="30.1" class="cardItemValue" />
						</l:HorizontalLayout>

						<!-- Card Third -->
						<l:HorizontalLayout class="cardItemUI">
							<VBox>
								<HBox>
									<Text text="SO2" class="cardItemTitle" />
									<Text text="unit" class="cardItemUnit" />
								</HBox>
								<Text text="이산화황농도" />
								<Text text="Status" class="cardItemStatus" />
							</VBox>
							<Text text="30.1" class="cardItemValue" />
						</l:HorizontalLayout>
					</VBox>
					<!-- Table Area -->
					<VBox>
						<Text text="Detail Information" class="subTitle" />
						<t:Table id="idTable" selectionMode="None" rows="{/}"
							visibleRowCount="auto" width="100%">
							<t:columns>
								<t:Column resizable="true" hAlign="Center"
									width="150px">
									<Label text="측정일" />
									<t:template>
										<Text text="{datatime}"></Text>
									</t:template>
								</t:Column>
								<t:Column resizable="true" hAlign="Center"
									width="100px">
									<Label text="측정소" />
									<t:template>
										<Text text="{stationname}"></Text>
									</t:template>
								</t:Column>
								<t:Column resizable="true" hAlign="Center"
									width="100px">
									<Label text="측정망" />
									<t:template>
										<Text text="{mangname}"></Text>
									</t:template>
								</t:Column>
								<t:Column resizable="true" hAlign="Center"
									width="150px">
									<Label text="통합대기환경수치" />
									<t:template>
										<Text text="{khaivalue}"></Text>
									</t:template>
								</t:Column>
								<t:Column resizable="true" hAlign="Center"
									width="150px">
									<Label text="통합대기환경지수" />
									<t:template>
										<Text text="{khaigrade}"></Text>
									</t:template>
								</t:Column>
								<t:Column resizable="true" hAlign="Center"
									width="100px">
									<Label text="오존 농도" />
									<t:template>
										<Text text="{o3value}"></Text>
									</t:template>
								</t:Column>
								<t:Column resizable="true" hAlign="Center"
									width="100px">
									<Label text="오존지수" />
									<t:template>
										<Text text="{o3grade}"></Text>
									</t:template>
								</t:Column>

							</t:columns>
						</t:Table>

					</VBox>


				</l:HorizontalLayout>

			</VBox>
		</l:content>
	</l:HorizontalLayout>

</mvc:View>
